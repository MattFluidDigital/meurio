.founders-slider
  .row
    ul.locales
      li class=('active' if I18n.locale == :pt) = link_to 'Português (BR)', locale: :pt
      li class=('active' if I18n.locale == :en) = link_to 'English (US)', locale: :en
    .nossas-cidades= image_tag("nossas_cidades.png")

  ul data={orbit: true, options: "slide_number:false; resume_on_mouseout:true; navigation_arrows: false;"}
    li.slide-1
      .row
        .slide-content
          = t('.slider.slide1')

    li.slide-2
      .row
        .slide-content
          = t('.slider.slide2')

    li.slide-3
      .row
        .slide-content
          = t('.slider.slide3')

  .row
    .founders-subscribe
      p= t('.slider.subscribe')
      = link_to(t('.slider.subscribe_cta'), "#subscription", class: [:button, :radius, :secondary, :large])

