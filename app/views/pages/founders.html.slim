.fixed
  .contain-to-grid.founders-top-bar
    nav.top-bar data={topbar: true} role="navigation"
      ul.title-area
        li.name
          h1
            = link_to(root_path) do
              = image_tag("nossas_cidades.png")
      section.top-bar-section
        ul.right
          li= link_to t('.slider.title'), "#founders-slider"
          li= link_to t('.about.title'), "#founders-about"
          li= link_to t('.program.title'), "#founders-program"
          li= link_to t('.steps.title'), "#founders-steps"
          li= link_to t('.network.title'), "#founders-network"
          li= link_to t('.moderators.title'), "#founders-moderators"
          li= link_to t('.support.title'), "#founders-support"
          li= link_to t('.slider.subscribe_cta'), "#founders-subscription", class: [:button, :radius, :secondary]

.founders-slider#founders-slider
  .row
    ul.locales
      li class=('active' if I18n.locale == :pt) = link_to('Português (BR)', locale: :pt)
      li class=('active' if I18n.locale == :en) = link_to('English (US)', locale: :en)
    .nossas-cidades= image_tag(t('.logo'))
  ul#founders-orbit data={orbit: true, options: "slide_number:false; resume_on_mouseout:true; navigation_arrows: false; timer_speed: 5000;"}
    li.slide-1
      .row
        .slide-content
          .vertical-align-container
            .vertical-align-content= t('.slider.slide1')
    li.slide-2
      .row
        .slide-content
          .vertical-align-container
            .vertical-align-content= t('.slider.slide2')
    li.slide-3
      .row
        .slide-content
          .vertical-align-container
            .vertical-align-content= t('.slider.slide3')
  .row
    .founders-subscribe
      p= t('.slider.subscribe')
      = link_to(t('.slider.subscribe_cta'), "#founders-subscription", class: [:button, :radius, :secondary, :large])

