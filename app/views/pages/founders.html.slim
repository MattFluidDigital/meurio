        a.close-reveal-modal &#215;

    .support-item
      = image_tag "pages/founders/support/support_icon2.png"
      p= t('.support.item2.content')
      = link_to t('.support.item2.link'), "https://docs.google.com/forms/d/12YaW20C5fq5m1nozaZhOZYrnPb4ZvzJFXtqfWGyxyoM/viewform", class: [:button, :radius, :large, :secondary]
