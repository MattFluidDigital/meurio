.activity class=[activity.relname]
  - if activity.user
    = image_tag activity.user.avatar_url
    span.user= link_to activity.user.name, activity.user
    |  
    span.text= t "activity.#{activity.relname}"
    |  
    span.mobilization= link_to activity.mobilization.short_title, activity.mobilization
    span.created_at #{distance_of_time_in_words_to_now activity.created_at} atr√°s
