header
  .row
    .large-5.columns
      = link_to image_tag("marca-mr.png"), root_path
    .large-7.columns.login
      - if user_signed_in?
        .large-12.push-6.columns.logged-user
          span.name= current_user.email
          span  | 
          = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout'
      - else
        = form_for devise_resource, as: resource_name, url: session_path(resource_name), :validate => true do |f|
          .large-4.columns
            = f.label :email
            = f.text_field :email, id: :login_email, validate: { uniqueness: false }
          .large-4.columns
            = f.label :password
            = f.password_field :password, id: :login_password
            = link_to 'Esqueceu sua senha?', '#'
          .large-4.columns
            = f.submit 'Entrar na Rede', class: 'btn'
